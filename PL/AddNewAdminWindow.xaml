<Window x:Class="PL.AddNewAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="AddNewAdminWindow" Height="450" Width="800">
    <Window.Icon>
        <BitmapImage UriSource="/images/iconShop.png" DecodePixelWidth="32" DecodePixelHeight="32"/>
    </Window.Icon>
    <Grid>
        <Button Content="Register" Click="RegisterFunc"   HorizontalAlignment="Center" Margin="0,0,0,70" FontSize="25" VerticalAlignment="Bottom" Background="Pink" Padding="10"/>
        <TextBlock HorizontalAlignment="Left" Margin="295,187,0,0" TextWrapping="Wrap" FontSize="20" Text="username: " VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="295,217,0,0" TextWrapping="Wrap" FontSize="20" Text="password: " VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="400,187,0,0" TextWrapping="Wrap" FontSize="20" Text="{Binding Username}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" FontSize="20" Text="{Binding Password}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
