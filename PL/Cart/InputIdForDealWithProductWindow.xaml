<Window x:Class="PL.InputIdForDealWithProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="InputIdForDealWithProductWindow" Height="450" Width="800">
    <Window.Icon>
        <BitmapImage UriSource="/images/iconShop.png" DecodePixelWidth="32" DecodePixelHeight="32"/>
    </Window.Icon>
    <Grid>
        <TextBox  Text="{Binding Input}" HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" FontSize="20"  VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="227,217,0,0" TextWrapping="Wrap" FontSize="20" Text="Give me ID please: " VerticalAlignment="Top"/>
        <Button  Content="click for accepting" Click="ButtonOfAccept_Click"  HorizontalAlignment="Center" Margin="0,0,0,70" FontSize="25" VerticalAlignment="Bottom" Background="#2B03A1AA" Padding="10"/>
    </Grid>
</Window>
