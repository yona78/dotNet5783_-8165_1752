<Window x:Class="PL.OrderItemInCartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="OrderItemInCartWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="AmountTextBlock" Text="amount:" HorizontalAlignment="Left" FontSize="13" Width="68" Margin="328,166,0,240"/>
        <TextBox x:Name ="AmountTextBox" Text="{Binding Amount}"  HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  Height="22" Margin="400,168,0,0" />
        <Button x:Name="update" Click ="UpdateOption" Content="update" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,312,0,0" Padding="5" Width="60" Height="90" />

    </Grid>

</Window>
