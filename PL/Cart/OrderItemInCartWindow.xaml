<Window x:Class="PL.OrderItemInCartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="OrderItemInCartWindow" Height="450" Width="800">
    <Window.Icon>
        <BitmapImage UriSource="/images/iconShop.png" DecodePixelWidth="32" DecodePixelHeight="32"/>
    </Window.Icon>
    <Grid>
        <Button x:Name="update" Click ="UpdateOption" Content="update" HorizontalAlignment="Center" Margin="0,0,0,70" FontSize="25" VerticalAlignment="Bottom" Background="#0FFF4CAA" Padding="10"/>
        <TextBox  Text="{Binding Amount}" HorizontalAlignment="Left" Margin="400,167,0,0" TextWrapping="Wrap" FontSize="20"  VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="317,167,0,0" TextWrapping="Wrap" FontSize="20" Text="Amount: " VerticalAlignment="Top"/>

    </Grid>

</Window>
