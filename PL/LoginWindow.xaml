<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="LoginWindow" Height="450" Width="800">
    <Window.Icon>
        <BitmapImage UriSource="/images/iconShop.png" DecodePixelWidth="32" DecodePixelHeight="32"/>
    </Window.Icon>
    <Grid>
        <Button Content="Login" Click="LoginFunc" HorizontalAlignment="Center" Margin="0,0,0,80" VerticalAlignment="Bottom" />
        <TextBlock HorizontalAlignment="Left" Margin="272,157,0,0" TextWrapping="Wrap" Text="username:" VerticalAlignment="Top" Height="18" Width="73"/>
        <TextBlock HorizontalAlignment="Left" Margin="272,178,0,0" TextWrapping="Wrap" Text="password:" VerticalAlignment="Top" Height="18" Width="73"/>
        <TextBox HorizontalAlignment="Center" Margin="0,157,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="124"/>
        <TextBox HorizontalAlignment="Center" Margin="0,178,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="124"/>

    </Grid>
</Window>
